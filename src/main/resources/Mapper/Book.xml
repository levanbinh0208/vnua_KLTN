<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vnua.mapper.BookMapper">

    <resultMap id="BookResultMap" type="com.vnua.model.Book">
        <id property="bookId" column="book_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="publisher" column="publisher"/>
        <result property="year" column="year"/>
        <result property="isbn" column="isbn"/>
        <result property="wordFileName" column="word_File_Name"/>
    </resultMap>

    <select id="getBooks" resultMap="BookResultMap">
        SELECT * FROM book
    </select>

    <insert id="insertBook" parameterType="Book" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO book (title, publisher, year, isbn, word_file_name)
        VALUES (#{title}, #{publisher}, #{year}, #{isbn}, #{wordFileName})
    </insert>

    <update id="updateBook" parameterType="Book">
        UPDATE book
        SET title = #{title},
            publisher = #{publisher},
            year = #{year},
            isbn = #{isbn},
            word_file_name = #{wordFileName}
        WHERE book_id = #{bookId}
    </update>

    <delete id="deleteBook" parameterType="int">
        DELETE FROM book WHERE book_id=#{bookId}
    </delete>

    <select id="findById" resultMap="BookResultMap">
        SELECT * FROM book WHERE book_id=#{bookId}
    </select>
</mapper>
