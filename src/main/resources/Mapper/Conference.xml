<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vnua.mapper.ConferenceMapper">
    <resultMap id="ConferenceResultMap" type="com.vnua.model.Conference">
        <id property="confId" column="conf_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="location" column="location"/>
        <result property="date" column="date" jdbcType="VARCHAR"/>
        <result property="role" column="role"/>
        <result property="wordFileName" column="word_File_Name"/>
    </resultMap>

    <select id="getConferences" resultMap="ConferenceResultMap">
        SELECT * FROM dbo.conference
    </select>

    <insert id="insertConference" parameterType="com.vnua.model.Conference">
        INSERT INTO dbo.conference (conf_id, user_id, title, location, date, role,word_File_Name)
        VALUES (#{confId}, #{userId}, #{title}, #{location}, #{date}, #{role},#{wordFileName})
    </insert>

    <update id="updateConference" parameterType="com.vnua.model.Conference">
        UPDATE dbo.conference
        SET user_id=#{userId}, title=#{title}, location=#{location}, date=#{date}, role=#{role},word_File_Name=#{wordFileName}
        WHERE conf_id=#{confId}
    </update>

    <delete id="deleteConference" parameterType="int">
        DELETE FROM dbo.conference WHERE conf_id=#{confId}
    </delete>

    <select id="findById" resultMap="ConferenceResultMap">
        SELECT * FROM conference WHERE conf_id = #{confId}
    </select>

    <select id="getByStatus" resultType="com.vnua.model.Conference">
        SELECT * FROM conference WHERE status = #{status}
    </select>

    <update id="updateStatus">
        UPDATE conference SET status = #{status} WHERE conf_id = #{id}
    </update>

    <select id="countByStatus" resultType="int">
        SELECT COUNT(*) FROM conference WHERE status = #{status}
    </select>

</mapper>