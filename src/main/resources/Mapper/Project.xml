<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vnua.mapper.ProjectMapper">

    <resultMap id="ProjectResultMap" type="com.vnua.model.Project">
        <id property="projectId" column="project_id"/>
        <result property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="startDate" column="start_date"/>
        <result property="endDate" column="end_date"/>
        <result property="role" column="role"/>
        <result property="wordFileName" column="word_File_Name"/>
    </resultMap>

    <select id="getAllProjects" resultMap="ProjectResultMap">
        SELECT * FROM project
    </select>

    <insert id="insertProject" parameterType="com.vnua.model.Project">
        INSERT INTO project (project_id, user_id, name, description, start_date, end_date, role,word_File_Name)
        VALUES (#{projectId}, #{userId}, #{name}, #{description}, #{startDate}, #{endDate}, #{role},#{wordFileName})
    </insert>

    <update id="updateProject" parameterType="com.vnua.model.Project">
        UPDATE project
        SET user_id=#{userId}, name=#{name}, description=#{description}, start_date=#{startDate},
            end_date=#{endDate}, role=#{role},word_File_Name = #{wordFileName}
        WHERE project_id=#{projectId}
    </update>

    <delete id="deleteProject" parameterType="int">
        DELETE FROM project WHERE project_id=#{projectId}
    </delete>

    <select id="getProjectById" resultMap="ProjectResultMap">
        SELECT * FROM project WHERE project_id=#{projectId}
    </select>

    <select id="getByStatus" resultType="com.vnua.model.Project">
        SELECT * FROM project WHERE status = #{status}
    </select>

    <update id="updateStatus">
        UPDATE project SET status = #{status} WHERE project_id = #{id}
    </update>

    <select id="countByStatus" resultType="int">
        SELECT COUNT(*) FROM project WHERE status = #{status}
    </select>

</mapper>