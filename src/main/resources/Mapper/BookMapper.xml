<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vnua.mapper.BookMapper">

    <resultMap id="BookResultMap" type="com.vnua.model.Book">
        <id property="bookId" column="book_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="publisher" column="publisher"/>
        <result property="year" column="year"/>
        <result property="isbn" column="isbn"/>
    </resultMap>

    <select id="getBooks" resultMap="BookResultMap">
        SELECT * FROM book
    </select>

    <insert id="insertBook" parameterType="com.vnua.model.Book">
        INSERT INTO book (title, author, published_year)
        VALUES (#{title}, #{author}, #{publishedYear})
    </insert>

    <update id="updateBook" parameterType="com.vnua.model.Book">
        UPDATE book
        SET title=#{title}, author=#{author}, published_year=#{publishedYear}
        WHERE id=#{id}
    </update>

    <delete id="deleteBook" parameterType="int">
        DELETE FROM book WHERE id=#{id}
    </delete>
</mapper>
